{
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "use_virtual_env": {
            "type": "boolean",
            "default": false
        },
        "global_parameters": {
            "type": "object",
            "properties": {
                "runtime_pipeline_id": {
                    "type": "string"
                },
                "runtime_job_id": {
                    "type": "string"
                },
                "runtime_code_location": {
                    "type": "object",
                    "properties": {
                        "github": {
                            "type": "string"
                        },
                        "commit_hash": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": ["github", "commit_hash", "path"],
                    "data_local_config": {
                        "type": "object",
                        "properties": {
                            "input_folder": {
                                "type": "string"
                            },
                            "output_folder": {
                                "type": "string"
                            },
                            "intermediate_folder": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "transform_config_class": {
                        "type": "string"
                    },
                    "parameters": {
                        "type": "object"
                    }
                },
                "required": ["transform_config_class"]
            }
        }
    },
    "required": ["name", "global_parameters", "steps"]
}
