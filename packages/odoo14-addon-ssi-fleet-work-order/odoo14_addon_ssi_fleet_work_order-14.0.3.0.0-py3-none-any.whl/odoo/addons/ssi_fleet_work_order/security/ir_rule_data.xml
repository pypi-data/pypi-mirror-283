<odoo>
    <record id="fleet_work_order_internal_user_rule" model="ir.rule">
        <field name="name">Fleet Work Order - Responsible to own data</field>
        <field name="model_id" ref="model_fleet_work_order" />
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
        <field name="domain_force">[ ('user_id','=',user.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="fleet_work_order_company_rule" model="ir.rule">
        <field name="name">Fleet Work Order - Responsible to company data</field>
        <field name="model_id" ref="model_fleet_work_order" />
        <field name="groups" eval="[(4, ref('fleet_work_order_company_group'))]" />
        <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="fleet_work_order_company_child_rule" model="ir.rule">
        <field
            name="name"
        >Fleet Work Order - Responsible to company and all child companies data
        </field>
        <field name="model_id" ref="model_fleet_work_order" />
        <field
            name="groups"
            eval="[(4, ref('fleet_work_order_company_child_group'))]"
        />
        <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="fleet_work_order_all_rule" model="ir.rule">
        <field name="name">Fleet Work Order - Responsible to all data</field>
        <field name="model_id" ref="model_fleet_work_order" />
        <field name="groups" eval="[(4, ref('fleet_work_order_all_group'))]" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="fleet_work_order_analysis_company_rule" model="ir.rule">
        <field name="name">Fleet Work Order Analysis - Responsible to company data</field>
        <field name="model_id" ref="model_fleet_work_order_analysis" />
        <field name="groups" eval="[(4, ref('fleet_work_order_analysis_company_group'))]" />
        <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="fleet_work_order_analysis_company_child_rule" model="ir.rule">
        <field
            name="name"
        >Fleet Work Order Analysis - Responsible to company and all child companies data
        </field>
        <field name="model_id" ref="model_fleet_work_order_analysis" />
        <field
            name="groups"
            eval="[(4, ref('fleet_work_order_analysis_company_child_group'))]"
        />
        <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>

    <record id="fleet_work_order_analysis_all_rule" model="ir.rule">
        <field name="name">Fleet Work Order Analysis - Responsible to all data</field>
        <field name="model_id" ref="model_fleet_work_order_analysis" />
        <field name="groups" eval="[(4, ref('fleet_work_order_analysis_all_group'))]" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="1" />
    </record>
</odoo>
