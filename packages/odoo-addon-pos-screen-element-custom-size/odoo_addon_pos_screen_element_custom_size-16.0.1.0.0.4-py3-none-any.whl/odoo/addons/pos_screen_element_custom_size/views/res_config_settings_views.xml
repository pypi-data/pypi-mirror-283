<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.inherited.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_inventory_section" position="after">
                <h2>POS Screen Custom Settings</h2>
                <div
                    class="row mt16 o_settings_container"
                    id="pos_screen_custom_settings"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        title="Product Title Mini Width"
                    >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="pos_product_title_min_width" />
                            <div class="text-muted">
                                Minimum width of the product tile in pixels
                            </div>
                            <div>
                                <field name="pos_product_title_min_width" />
                                <span>pixel</span>
                            </div>
                        </div>
                    </div>
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        title="Product Text Font Size"
                    >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="pos_product_text_font_size" />
                            <div
                                class="text-muted"
                            >Custom font size of the product name label</div>
                            <div>
                                <field name="pos_product_text_font_size" />
                                <span>pixel</span>
                            </div>
                        </div>
                    </div>
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        title="Price Tag Font Size"
                    >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="pos_price_tag_font_size" />
                            <div
                                class="text-muted"
                            >Custom font size of the price label</div>
                            <div>
                                <field name="pos_price_tag_font_size" />
                                <span>pixel</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
